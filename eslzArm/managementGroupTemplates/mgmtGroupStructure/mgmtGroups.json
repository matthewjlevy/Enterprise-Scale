{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "topLevelManagementGroupPrefix": {
            "type": "string",
            "metadata": {
                "description": "Provide prefix for the management group structure."
            }
        },
        "sharedMgs": {
            "type": "array",
            "defaultValue": [
                "management",
                "connectivity",
                "identity"
            ],
            "metadata": {
                "description": "Management groups for shared specific purposes, such as management, networking, identity etc."
            }
        },
        "prodMgs": {
            "type": "array",
            "defaultValue": [
                "online",
                "corp"
            ],
            "metadata": {
                "description": "These are the landing zone management groups."
            }
        }
    },
    "variables": {
        "enterpriseScaleManagementGroups": {
            "shared": "Mgmt-IT-SharedServices",
            "prod": "Mgmt-Prod",
            "dev": "Mgmt-NonProd",
            "sandboxes": "[concat(parameters('topLevelManagementGroupPrefix'), '-', 'sandboxes')]"
        }
    },
    "resources": [
        {
            // Create top level management group under tenant root
            "type": "Microsoft.Management/managementGroups",
            "scope": "/",
            "apiVersion": "2020-05-01",
            "name": "[parameters('topLevelManagementGroupPrefix')]",
            "properties": {}
        },
        {
            // Create management group for shared management groups
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[variables('enterpriseScaleManagementGroups').shared]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('enterpriseScaleManagementGroups').shared]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
                    }
                }
            }
        },
        {
            // Create management group for landing zones
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[variables('enterpriseScaleManagementGroups').prod]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('enterpriseScaleManagementGroups').prod]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
                    }
                }
            }
        },
        {
            // Create management group for sandbox subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[variables('enterpriseScaleManagementGroups').sandboxes]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('enterpriseScaleManagementGroups').sandboxes]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
                    }
                }
            }
        },         
        {
            // Create management group for dev subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[variables('enterpriseScaleManagementGroups').dev]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('enterpriseScaleManagementGroups').dev]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'))]"
                    }
                }
            }
        },        
        {
            // Create child management groups for shared resources
            "condition": "[not(empty(parameters('sharedMgs')))]",
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[concat(parameters('topLevelManagementGroupPrefix'), '-', parameters('sharedMgs')[copyIndex()])]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups', variables('enterpriseScaleManagementGroups').shared)]"
            ],
            "copy": {
                "name": "sharedMgCopy",
                "count": "[length(parameters('sharedMgs'))]"
            },
            "properties": {
                "displayName": "[concat(parameters('topLevelManagementGroupPrefix'), '-', parameters('sharedMgs')[copyIndex()])]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', variables('enterpriseScaleManagementGroups').shared)]"
                    }
                }
            }
        },
        {
            // Create child management groups for landing zones
            "condition": "[not(empty(parameters('prodMgs')))]",
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[concat(parameters('topLevelManagementGroupPrefix'), '-', parameters('prodMgs')[copyIndex()])]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', variables('enterpriseScaleManagementGroups').prod)]"
            ],
            "copy": {
                "name": "lzMgCopy",
                "count": "[length(parameters('prodMgs'))]"
            },
            "properties": {
                "displayName": "[concat(parameters('topLevelManagementGroupPrefix'), '-', parameters('prodMgs')[copyIndex()])]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', variables('enterpriseScaleManagementGroups').prod)]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
